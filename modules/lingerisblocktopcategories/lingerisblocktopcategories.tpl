<!-- Block top categories module -->
<div id="categories_block_top" class="block">
	
	<div class="block_content">
		<ul class="">
		{foreach from=$blockCategTree.children item=child name=blockCategTree}
			{if $smarty.foreach.blockCategTree.last}
				{include file="$branche_tpl_path" node=$child class='last'}
			{elseif $smarty.foreach.blockCategTree.first}
				{include file="$branche_tpl_path" node=$child class='first'}
			{else}
				{include file="$branche_tpl_path" node=$child class='item'}
			{/if}
		{/foreach}
		</ul>
	</div>
</div>

<!-- /Block top categories module -->
